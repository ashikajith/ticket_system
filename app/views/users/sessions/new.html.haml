#login
  %h3.text-center.text-white.pt-5 Ticket System Login Page
  .container
    #login-row.row.justify-content-center.align-items-center
      #login-column.col-md-6
        #login-box.col-md-12
          = form_for(resource, as: resource_name, url: session_path(resource_name), html:{id: 'login-form'}) do |f|
            %h3.text-center.text-info Login
            .form-group
              %label Email
              = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
            .form-group
              %label password
              = f.password_field :password, autocomplete: 'current-password', class: 'form-control'
            .form-group
              %label.text-info
                %span Remember me
                = f.check_box :remember_me
              %br
              = f.submit "Log in", class: "btn btn-success"
            #register-link.text-right
              = link_to "Sign up", new_registration_path(resource_name)
